{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "removeComments": true,
        "pretty": true,
        "module": "CommonJS",
        "outDir": "./dist",
        "skipLibCheck": true,
        "declarationDir": "./dist/types",
        "target": "ES6",
        "lib": ["ESNext"],
        "types": ["node"],
        "noEmitHelpers": false,
        "importHelpers": false,
        "experimentalDecorators": true,
        "declaration": true,
        "esModuleInterop": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["src/**/*.ts"]
}
